<div id="toolbar">
  <%= link_to("Edit group", @group.festival_id != nil ? edit_festival_group_path(@group.festival, @group):edit_section_group_path(@group.section, @group), :class => :edit) %>
  <%= link_to("New position", new_group_position_path(@group), :class => :add) %>
</div>
<div id="items">
  <% if @group.positions.any? %>
    <%= render :partial => 'positions/list', :locals => {:positions => @group.positions} %>
  <% else %>
    Empty group
  <% end %>
</div>
